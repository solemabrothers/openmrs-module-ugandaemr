<htmlform formName="Interfacility referral form"
          formEncounterType="786c576b-b70f-4235-93ea-fbce1a3f38c4"
          formDescription="Interfacility referral form"
          formUuid="e305d98a-dbb2-45ba-ba2a-682b497ce27c"
          formVersion="1.0"
          formAddMetadata="yes"
          formUILocation="patientDashboard.visitActions"
          formOrder="1"
          formIcon="icon-stethoscope"
          formShowIf="(visit.active || !visit.active) &amp;&amp; patient.person.dead==false"
          formDisplayStyle="Standard"
          formLabel="Interfacility Referral form">


    <div id="form-id">
    <div class="row">
        <div class="col-md-6">
            <h1>INTERFACILITY REFERRAL FORM</h1>
        </div>
        <div class="col-md-5"></div>
        <div class="col-md-1">
            <submit class="confirm" submitLabel="Save" submitStyle="customSubmit" />
        </div>
    </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">Personal Information</div>
                    <div class="card-body">
                        <div class="row">
                        <div class="col-md-3">
                        <label>Date</label>
                        <encounterDate default="today" disallowMultipleEncountersOnDate="block"/>
                        <span style="display: none;">
                            <encounterLocation default="629d78e9-93e5-43b0-ad8a-48313fd99117"
                                               order="629d78e9-93e5-43b0-ad8a-48313fd99117"/>
                        </span>
                        </div>
                        <div class="col-md-2">
                            <label>Nationality:</label>  <lookup expression="personAttributes.get('Natioinality').name"/>
                        </div>
                            <div class="col-md-3">
                                <label>Referral Facility:</label> <obs id="90211" conceptId="90211" />
                            </div>
                            <div class="col-md-3">
                                <label>Target Population:</label> <obs id="165169" conceptId="165169" />
                            </div>
                        </div>
<!--                        <div class="row">-->
<!--                            <div class="col-md-3">-->
<!--                               <label>Date of Referral</label> <obs id="163154" conceptId="163154" />-->
<!--                            </div>-->
<!--                            <div class="col-md-3">-->
<!--                                <label>Cross-border Cluster Site</label> <obs id="163154" conceptId="163154" />-->
<!--                            </div>-->
<!--                        </div>-->
                    </div>

                </div>

                <div class="card">
                    <div class="card-header">Referral Information</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Reason for Referral</label>
                                <obs id="168094" conceptId="168094" />
                            </div>
                            <div class="col-md-4">
                                <label>General Comments:</label><obs id="159395" conceptId="159395" />
                            </div>
                            <div class="col-md-4">
                                <label>Referral Reccomendations:</label> <obs id="168775" conceptId="168775" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label><span class="required">*</span>Provider</label>
                                <encounterProvider required="true"/>
                            </div>
<!--                            <div class="col-md-4">-->
<!--                                <label>Email</label> <obs id="163154" conceptId="163154" />-->
<!--                            </div>-->
<!--                            <div class="col-md-4">-->
<!--                                <label>Telephone</label> <obs id="163154" conceptId="163154" />-->
<!--                            </div>-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</htmlform>